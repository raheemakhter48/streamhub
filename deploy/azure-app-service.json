{
  "name": "streamflow-backend",
  "resourceGroup": "streamflow-rg",
  "location": "eastus",
  "sku": {
    "name": "B1",
    "tier": "Basic"
  },
  "properties": {
    "serverFarmId": "/subscriptions/{subscription-id}/resourceGroups/streamflow-rg/providers/Microsoft.Web/serverfarms/streamflow-plan",
    "siteConfig": {
      "linuxFxVersion": "NODE|18-lts",
      "appSettings": [
        {
          "name": "NODE_ENV",
          "value": "production"
        },
        {
          "name": "PORT",
          "value": "3000"
        },
        {
          "name": "WEBSITE_NODE_DEFAULT_VERSION",
          "value": "~18"
        }
      ],
      "alwaysOn": true
    }
  }
}

